<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.gabil.kdvapp.controller.NotebookController"
      spacing="15" alignment="CENTER"
      style="-fx-padding: 30; -fx-background-color: #ecf0f1; -fx-background-radius: 15;">

    <Label text="📝 Yeni Not Ekle" style="-fx-font-size: 20px; -fx-text-fill: #2c3e50; -fx-font-weight: bold;" />

    <TextField fx:id="titleField" promptText="Not Başlığı"
               style="-fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8;" />

    <TextArea fx:id="contentArea" promptText="Not İçeriği"
              prefHeight="200" wrapText="true"
              style="-fx-padding: 10; -fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8;" />

    <CheckBox fx:id="pinnedCheckBox" text="Sabit Not" />

    <Button text="💾 Kaydet" onAction="#saveNote"
            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
</VBox>